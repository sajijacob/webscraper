{{#each articles}}

<ul class="collapsible" data-collapsible="accordion">
    <li>
        <div style="background-color: white;" class="collapsible-header blue lighten-2">
            <i class= "material-icons">language</i> <b>{{updated}}</b>
            <div style="clear: leeft; line-height: 110%; padding-bottom: 10px;"><b>{{title}}</b></div>
        </div>
        <div class="collapsible-body" style= "background-color: white">
            <p>
                {{summary}}
                <br>
                <br>
                <i>Please read the article...<a href="{{link}}" target=" _new"></a>.</i>
            </p>

        </div>
    </li>
    <li>
        <div class="collapsible-header"><li class="material-icons">comment</li>
        Add a Comment
        </div>
        <div class="collapsible-body" style="background-color: white;">
            <form id="form-add-{{_id}}" action="add/comment/{{_id}}" method="post" style="background-color:aqua;">
            <div class="row">
                <div class="input-field col s2"></div>
                <div class="input-field col s8">
                    <input  id="author_name" name="name" type="text" class="validate"> 
                    <label for="author_name">Your Name:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2"></div>
                <div class="input-field col s8">
                    <textarea id="comment_box" name="comment" class="materialize-textarea"></textarea>
              <label for="comment_box">Your Reaction:</label>
                </div>
            </div>
            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
              <center><input class="btn add-comment-button" data-id="{{_id}}" type="submit" value="Submit"></center>
              </div>
            </div>
            </form>
        </div>
    </li>
    <li>
        <div class="collapsible-header"><i class="material-icons">thumbs_up_down</i>View Comments</div>
        <div class="collapsible-body" style="background-color:aqua;">
            {{!--Check if the article has commenets --}}
            {{#if comments}}
            {{!--Article has commenets to iterate over them --}}
            <ul class="collection">
                {{#each comments}}
                <li class="collection-item">
                    {{!--Add author name --}}
                    <b>{{author}}</b>
                    {{!-- Add a delete button --}}
                    <span class="badge">
                        <form id="form-delete-{{_id}}" action="remove/comment/{{_id}}" method="post">
                        <input class="btm-small delete-comment-button" data-id="{{_id}}" type="submit" value="Delete"
                        style="color:blue; background-color:aqua; border-color:blueviolet;">
                        </form>
                    </span>
                     <br>
                    {{!--add content of the comment--}}
                    {{content}}                    
                </li>
                {{/each}}
            </ul>
            {{!--No commenets, so display message--}}
            {{else}}
            <p>No Comments Yet </p>
            {{if}}
        </div>
    </li>
</ul>
{{/each}}